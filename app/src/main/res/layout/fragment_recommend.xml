<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->


    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_below="@+id/tabs" />
        <!-- // Tab buttons -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/textColorPrimary"
            android:elevation="1dp"
            android:background="@color/colorPrimary"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/data_view"
            android:layout_below="@+id/map_view"
            android:layout_above="@+id/select_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">
            <ScrollView
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:id="@+id/data_scroll_view"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:id="@+id/nameView"
                        android:singleLine="false"
                        android:layout_marginBottom="5dp"
                        android:textSize="17dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="번호"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/telView"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/cateView"
                        android:textSize="17dp"
                        android:ellipsize="none"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:id="@+id/addrView"
                        android:textSize="17dp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </ScrollView>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:id="@+id/cookImage"
                android:scaleType="fitXY"
                android:src="@drawable/noon_widget_icon"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/data_scroll_view"
                android:layout_toStartOf="@+id/data_scroll_view" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_view"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보선택하기"
                android:id="@+id/check"
                android:background="@color/colorAccent"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/check"
                android:layout_toRightOf="@+id/check"
                android:layout_toEndOf="@+id/check" />
        </RelativeLayout>
    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
